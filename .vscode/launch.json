{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "ch8_visual_odometry_2",
            "type": "cppdbg",
            "request": "launch",
            // 要调试的可执行文件路径，内置变量不够用时可以用/..返回上级
            "program": "${workspaceFolder}/build/ch8_visual_odometry_2/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            // cwd指定了可执行文件运行时的路径
            "cwd": "${workspaceFolder}/",   
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // task.json中的build
            "preLaunchTask": "colcon build",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerArgs": "-q -ex quit; wait() { fg >/dev/null; }; /usr/bin/gdb -q --interpreter=mi",
        }
    ]
}
